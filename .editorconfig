# top-most EditorConfig file
root = true

[*]
end_of_line = lf
insert_final_newline = true

# Matches multiple files with brace expansion notation
[{*.go,go.mod,go.sum}]
charset = utf-8
indent_style = tab
indent_size = 4
trim_trailing_whitespace = true

[*.py]
charset = utf-8
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.{js,html,css,json,yml}]
charset = utf-8
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.{md,txt}]
trim_trailing_whitespace = false
